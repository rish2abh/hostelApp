        "body": {
          "mode": "raw",
          "raw": "{\n    \"reportType\": \"CUSTOM\",\n    \"startDate\": \"2024-01-01\",\n    \"endDate\": \"2024-03-31\",\n    \"metrics\": [\n        \"OCCUPANCY\",\n        \"REVENUE\",\n        \"EXPENSES\"\n    ],\n    \"groupBy\": \"MONTHLY\",\n    \"filters\": {\n        \"roomTypes\": [\"SINGLE\", \"DOUBLE\"],\n        \"paymentStatus\": \"PAID\"\n    }\n}"
        },
